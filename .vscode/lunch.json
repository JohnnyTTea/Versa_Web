{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Dev: Full Stack (Server + Web)",
      "configurations": ["Dev: Server", "Dev: Web"]
    }
  ],
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Dev: Server",
      "cwd": "${workspaceFolder}/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:dev"],
      "console": "integratedTerminal",
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Dev: Web",
      "cwd": "${workspaceFolder}/web",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "restart": true
    }
  ]
}
